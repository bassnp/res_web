{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Site Metadata Configuration",
  "description": "Site-wide metadata and deployment configuration",
  "type": "object",
  "required": ["site", "theme", "deployment", "repository"],
  "properties": {
    "site": {
      "type": "object",
      "required": ["title", "description"],
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "og_image": { "type": "string" }
      }
    },
    "theme": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string", "enum": ["light", "dark", "system"] }
      }
    },
    "deployment": {
      "type": "object",
      "required": ["backend_port", "frontend_port", "api_base_url_dev", "frontend_url_dev", "cors_origins"],
      "properties": {
        "backend_port": { "type": "integer" },
        "frontend_port": { "type": "integer" },
        "api_base_url_dev": { "type": "string" },
        "frontend_url_dev": { "type": "string" },
        "cors_origins": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "repository": {
      "type": "object",
      "required": ["name", "image_name", "image_tag"],
      "properties": {
        "name": { "type": "string" },
        "image_name": { "type": "string" },
        "image_tag": { "type": "string" },
        "maintainer": { "type": "string" },
        "source": { "type": "string", "format": "uri" }
      }
    }
  }
}
