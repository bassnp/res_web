{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Experience Configuration",
  "description": "Work experience timeline entries",
  "type": "object",
  "required": ["timeline"],
  "properties": {
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "company", "period", "description", "tags", "color"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "company": { "type": "string" },
          "period": { "type": "string" },
          "description": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "color": { "type": "string" },
          "showcase_folder": { "type": "string" }
        }
      }
    }
  }
}
