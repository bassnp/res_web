{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Models Configuration",
  "description": "AI model definitions and configuration",
  "type": "object",
  "required": ["models", "default_model"],
  "properties": {
    "models": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "label", "description", "config_type", "badge"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "config_type": { "type": "string", "enum": ["standard", "reasoning"] },
          "badge": { "type": "string" }
        }
      }
    },
    "default_model": { "type": "string" },
    "disabled_models": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "label", "description", "config_type", "badge", "disabled_reason"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "description": { "type": "string" },
          "config_type": { "type": "string" },
          "badge": { "type": "string" },
          "disabled_reason": { "type": "string" }
        }
      }
    }
  }
}
