{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contact Configuration",
  "description": "Contact information and social links",
  "type": "object",
  "required": ["email", "social", "repo"],
  "properties": {
    "email": { "type": "string", "format": "email" },
    "social": {
      "type": "object",
      "properties": {
        "github": {
          "type": "object",
          "required": ["url", "display"],
          "properties": {
            "url": { "type": "string", "format": "uri" },
            "display": { "type": "string" }
          }
        },
        "mail": {
          "type": "object",
          "required": ["url", "display"],
          "properties": {
            "url": { "type": "string" },
            "display": { "type": "string" }
          }
        }
      }
    },
    "repo": {
      "type": "object",
      "required": ["url", "display"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "display": { "type": "string" }
      }
    }
  }
}
